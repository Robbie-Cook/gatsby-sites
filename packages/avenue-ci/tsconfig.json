{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "Apollo/*": ["apollo/*"],
      "Components/*": ["components/*"],
      "Helpers/*": ["helpers/*"],
      "Assets/*": ["assets/*"],
      "Constants/*": ["constants/*"]
    }
  },
  "include": [
    "src"
  ]
}
